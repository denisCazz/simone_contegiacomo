		<!-- Call to Action / Contact -->
		<section id="contatti" class="py-20 bg-slate-900 text-white">
			<div class="container mx-auto px-6 text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-8">Costruiamo il Futuro Insieme</h2>
